<Window x:Class="Authorization_2._0.RegistrationWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authorization_2._0"
        mc:Ignorable="d"
        Title="RegistrationWindows" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Rockstar Games" HorizontalAlignment="Center" FontSize="20" FontStyle="Italic"/>

        <StackPanel Grid.Row="1" Margin="50,0,50,0" VerticalAlignment="Center">
            <TextBlock Text="Вы успешно вошли в систему!" FontSize="30" HorizontalAlignment="Center" />
            <TextBlock Text="И вам грозит срок как минимум 7 лет, удачи! За вами выехали" FontSize="20" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
